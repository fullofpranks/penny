{
  "name": "pennywise",
  "description": "Pennywise – Cross-platform application that allows you to open URLs in a floating window that always stays on top.",
  "productName": "Pennywise",
  "author": "Kamran Ahmed <kamranahmed.se@gmail.com>",
  "version": "0.7.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "bootstrap": "^4.6.2",
    "electron-pdf-window": "^1.0.12",
    "electron-updater": "^4.6.5",
    "font-awesome": "^4.7.0",
    "is-url": "^1.2.4",
    "lodash.debounce": "^4.0.8",
    "nprogress": "^0.2.0",
    "prop-types": "^15.8.1",
    "query-string": "^7.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "url-parse": "^1.5.10",
    "yargs": "^16.2.0"
  },
  "scripts": {
    "_react": "cross-env BROWSER=none react-scripts start",
    "_electron": "env -u ELECTRON_RUN_AS_NODE cross-env APP_URL=http://localhost:3000 ./node_modules/.bin/electron public/electron.js",
    "_build": "react-scripts build",
    "start": "concurrently \"yarn _react\" \"wait-on http://localhost:3000 && yarn _electron\" ",
    "build": "yarn _build && electron-builder --mac --win --linux --x64 --ia32 --arm64 -p always",
    "build:mac": "yarn _build && electron-builder --mac --arm64 --x64",
    "build:mac-arm64": "yarn _build && electron-builder --mac --arm64",
    "build:mac-universal": "yarn _build && electron-builder --mac --universal",
    "postinstall": "electron-builder install-app-deps",
    "icons": "electron-icon-maker -i public/img/pennywise.png -o public",
    "test": "mocha"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "extends": null,
    "appId": "info.kamranahmed.pennywise",
    "asar": true,
    "copyright": "Copyright © 2018 Kamran Ahmed",
    "files": [
      "public/**/*",
      "build/**/*",
      "!public/pennywise.png",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.navigation",
      "icon": "public/img/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "category": "Network",
      "target": [
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "public/img/icon.ico"
    },
    "fileAssociations": [
      {
        "name": "Document",
        "description": "Pennywise",
        "role": "Viewer",
        "ext": "html"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "electron-icon-maker": "^0.0.4",
    "jquery": "^3.6.4",
    "mocha": "^9.2.2",
    "popper.js": "^1.16.1",
    "sass": "^1.57.1",
    "wait-on": "^7.0.1",
    "typescript": "^4.9.5"
  }
}
